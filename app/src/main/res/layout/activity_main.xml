<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/heading"
        android:text="CREW DATAS"
        android:textSize="25dp"
        android:textColor="#A80D4A"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".05"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guid2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".95"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guid3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".50"
        />
    <Button
        android:id="@+id/refresh"
        app:layout_constraintStart_toStartOf="@+id/guid1"
        app:layout_constraintEnd_toEndOf="@+id/guid3"
        app:layout_constraintTop_toBottomOf="@id/heading"
        android:layout_width="0dp"
        android:text="Refresh"
        android:background="@drawable/btn_bg"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:layout_marginEnd="3dp"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/delete"
        app:layout_constraintStart_toEndOf="@+id/guid3"
        app:layout_constraintEnd_toEndOf="@+id/guid2"
        app:layout_constraintTop_toBottomOf="@id/heading"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:text="Delete"
        android:background="@drawable/del_btn_bg"
        android:layout_marginStart="3dp"
        android:textAllCaps="false"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        tools:listitem="@layout/single_item"
        app:layout_constraintTop_toBottomOf="@+id/delete"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>